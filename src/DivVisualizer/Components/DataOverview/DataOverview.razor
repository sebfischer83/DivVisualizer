@using AntDesign.Charts;
@using DivVisualizer.Data
@using TagEChartsBlazor.Components
@inherits Fluxor.Blazor.Web.Components.FluxorComponent

@if (DatabaseOverview != null)
{
    <Descriptions Title="Übersicht (gesamt)"  Layout="@DescriptionsLayout.Horizontal" Column="1" 
    Colon="true">
        <DescriptionsItem Title="Aktien">@DatabaseOverview.Stocks</DescriptionsItem>
        <DescriptionsItem Title="Dividenden">@DatabaseOverview.Dividends</DescriptionsItem>
        <DescriptionsItem Title="erste Dividende">@DatabaseOverview.EarliestDate.ToString("d")</DescriptionsItem>
        <DescriptionsItem Title="Summe Dividenden">@(AppState.Value.IncomeType == IncomeType.Net ? DatabaseOverview.SumNetDividends : DatabaseOverview.SumGrossDividends)</DescriptionsItem>
    </Descriptions>
}
